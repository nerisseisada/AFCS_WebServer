<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body class="login-container">
    <div class="login-parent">
        <form class="login-form" action="/loginwebserver" method="POST">
            <img class="logo" src="/assets/images/logo.png" alt="Euodoo Logo">
            <h3>
                Login
            </h3>
            <!-- <div class="form-group mt-4">
                <label for="id">Company ID:</label>
                <input type="text" name="id" class="form-control" id="id" required>
            </div> -->
            <div class="form-group ">
                <label for="user">Email address:</label>
                <input type="email" name="user" class="form-control" id="user" required>
            </div>
            <div class="form-group">
              <label for="pwd">Password:</label>
              <input type="password" class="form-control" name="pwd" id="pwd" required>
            </div>
            <div class="add mt-3" style="font-size: 18px; float: left;">
                <input type="checkbox" onclick="showpass()" > Show Password
            </div>
            <button class="submit">Submit</button>
        </form>
    
    </div>
    <script>
        const showpass = () =>{
            const pwd = document.getElementById("pwd");

            if(pwd.type === "password" ){
                pwd.type = "text";
            }
            else{
                pwd.type = "password";
            }
           
        }
    </script>
</body>
</html>